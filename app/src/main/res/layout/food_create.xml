
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:background="@color/colorPrimaryMid"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/food_button2"
        android:layout_width="179dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="84dp"
        android:autoLink="none"
        android:autoText="true"
        android:background="#fcb016"
        android:text="Find Someone"
        android:textSize="24dp"
        />

    <SeekBar
        android:id="@+id/seekBar6"
        android:layout_width="179dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/header5"
        android:layout_alignStart="@+id/seekBar2"
        android:progress="50" />

    <SeekBar
        android:id="@+id/seekBar5"
        android:layout_width="179dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/header3"
        android:layout_alignStart="@+id/seekBar2"
        android:progress="50" />

    <SeekBar
        android:id="@+id/seekBar3"
        android:layout_width="179dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/header4"
        android:layout_alignStart="@+id/seekBar2"
        android:progress="50" />

    <SeekBar
        android:id="@+id/seekBar4"
        android:layout_width="179dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/header6"
        android:layout_alignStart="@+id/seekBar2"
        android:progress="50" />

    <TextView
        android:id="@+id/header3"
        android:layout_width="114dp"
        android:layout_height="wrap_content"

        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/header"
        android:layout_marginBottom="207dp"
        android:fontFamily="sans-serif-medium"
        android:text="Indian food"
        android:textColor="#000000"
        android:textSize="18dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/header5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/header"
        android:layout_marginBottom="156dp"
        android:fontFamily="sans-serif-medium"
        android:text="American food"
        android:textColor="#000000"
        android:textSize="18dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/header6"
        android:layout_width="114dp"
        android:layout_height="wrap_content"

        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/header"
        android:layout_marginTop="228dp"
        android:fontFamily="sans-serif-medium"
        android:text="Mexican food"
        android:textColor="#000000"
        android:textSize="18dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/header4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/header"
        android:layout_marginTop="181dp"
        android:fontFamily="sans-serif-medium"
        android:text="French Cuisine"
        android:textColor="#000000"
        android:textSize="18dp"
        android:textStyle="bold" />

    <FrameLayout
        android:id="@+id/frame_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/navigation"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </FrameLayout>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:backgroundTint="@color/colorAccent"
        app:itemTextColor="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        android:background="?android:attr/windowBackground"
        app:menu="@menu/navigation" />

    <TextView
        android:id="@+id/header"
        android:layout_width="114dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/seekBar2"
        android:layout_alignParentStart="true"
        android:layout_marginStart="28dp"

        android:fontFamily="sans-serif-medium"
        android:text="Asian food"
        android:textColor="#000000"
        android:textSize="18dp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/header2"
        android:layout_width="274dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"
        android:fontFamily="sans-serif-medium"
        android:text="You want to meet people with the same tastes as you?"
        android:textColor="#000000"
        android:textSize="20dp"

        android:textStyle="bold" />

    <SeekBar
        android:id="@+id/seekBar2"
        android:layout_width="179dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="26dp"
        android:layout_marginTop="138dp"
        android:progress="50" />

</RelativeLayout>


